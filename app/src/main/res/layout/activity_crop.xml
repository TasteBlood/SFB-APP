<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhkj.sfb.CropActivity">
    <include layout="@layout/title"
        android:id="@+id/include" />
    <RelativeLayout
        android:id="@+id/farmer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:clickable="true"
        android:layout_below="@+id/include"
        android:gravity="center_vertical" >
        <TextView
            android:id="@+id/farmer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农户姓名："
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/farmer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_toEndOf="@+id/farmer_title"
            android:text="王军"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/plot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/farmer">
        <TextView
            android:id="@+id/plot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地块编号："
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/plot_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17sp"
            android:text="YX0234234324"
            android:layout_toEndOf="@+id/plot_title"/>
    </RelativeLayout>
    <TableLayout
        android:id="@+id/element_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1px"
        android:paddingTop="1px"
        android:paddingRight="1px"
        android:paddingBottom="1px"
        android:stretchColumns="*"
        android:layout_below="@+id/plot"
        android:background="@color/colorPrimaryDark">

        <TableRow
            android:id="@+id/tableRow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指标项"
                android:gravity="center"
                android:layout_margin="0.5dip"
                android:background="@color/colorWhite"
                android:textColor="@color/colorPrimary"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前土壤肥力"
                android:gravity="center"
                android:layout_margin="0.5dip"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorWhite"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位"
                android:gravity="center"
                android:layout_margin="0.5dip"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorWhite"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="有机质"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="0.7"
                android:id="@+id/element_result1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="g/kg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="碱解氮"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="0.7"
                android:id="@+id/element_result2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="mg/kg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="有效磷"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="0.7"
                android:id="@+id/element_result3"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="mg/kg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="速效钾"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="0.7"
                android:id="@+id/element_result4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:background="@color/colorWhite"
                android:layout_margin="0.5dip"
                android:text="mg/kg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fertility"
        android:layout_below="@+id/element_table"
        android:layout_marginTop="14dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="作物类型："
            android:textColor="#000"
            android:textSize="17sp"
            android:id="@+id/fertility_title"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fertility_value"
            android:spinnerMode="dialog"
            android:layout_toEndOf="@+id/fertility_title"/>
        <!--  android:entries="@array/classes"-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:layout_below="@+id/fertility"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount_title"
            android:text="目标产量："
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginLeft="16dp"
            android:paddingTop="10dp"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="500"
            android:text="500"
            android:id="@+id/amount_value"
            android:paddingTop="10dp"
            android:layout_toEndOf="@+id/amount_title"
            android:background="@drawable/edit_bg"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生成配方"
        android:layout_below="@+id/amount"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/fertility_data"/>
</RelativeLayout>
