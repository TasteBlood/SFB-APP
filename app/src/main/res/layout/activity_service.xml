<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhkj.sfb.ServiceActivity">
    <include layout="@layout/title"
        android:id="@+id/include" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/service_layout1"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_layout_introduce"
            android:onClick="toCenter">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/service_introduce_img"
                android:src="@mipmap/info"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中心简介"
                android:layout_gravity="center"
                android:layout_below="@+id/service_introduce_img"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/service_layout3"
        android:layout_below="@+id/service_layout2"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_layout_feature"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:onClick="toFeature">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/service_feature_img"
                android:src="@mipmap/service"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特色服务"
                android:layout_gravity="center"
                android:layout_below="@+id/service_feature_img"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>
        </RelativeLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/service_layout2"
        android:layout_below="@+id/service_layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_layout_expert"
            android:layout_marginStart="18dp"
            android:onClick="toExpert">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/service_expert_img"
                android:src="@mipmap/expert"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专家简介"
                android:layout_gravity="center"
                android:layout_below="@+id/service_expert_img"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_layout_work"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:onClick="toService">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/service_work_img"
                android:src="@mipmap/work"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办事指南"
                android:layout_gravity="center"
                android:layout_below="@+id/service_work_img"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
